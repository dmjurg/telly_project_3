<h2><%= @user.name %>'s Page</h2>

<% if @user === current_user %>
<div class="search_shows">

  <p>Use the below field to search for tv shows:</p>

  <form id="show-search">
    <input class="search-term" type="text" placeholder="Search..." required>
    <input class="search-button" type="submit" value="Search">
  </form>

  <div class="show_results"></div>

</div>
<% end %>

<div class="favorite_shows">

  <h3>Favorite Shows</h3>

    <ul class="my_shows">
      <% for show in @user.shows %>
      <li>
        <%= link_to show.name, show_path(show) %>
        <% if @user === current_user %>
          <%= link_to "(remove)", unfavorite_show_path(show), :method => :post %>
        <% end %>
      </li>
      <% end %>
    </ul>

</div>

<div class="my_friends">

  <h3>Friends</h3>

  <ul class="friends">
    <% for friendship in @user.friendships %>
      <li>
        <%= link_to friendship.friend.name, user_path(friendship.friend) %>
        <% if @user === current_user %>
          <%= link_to "(remove)", friendship, :method => :delete %>
        <% end %>
      </li>
    <% end %>
  </ul>

</div>
