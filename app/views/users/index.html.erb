<div class="user_list">

  <h2>Users</h2>

  <% @users.each do |user| %>
    <div class ="user">
      <% if user == current_user %>
        <input type= "hidden">
      <% else %>
        <div class="indiv">
          <%= link_to user.name, user_path(user) %>
          <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post, :id => "friend" %>
        </div>
      <% end %>
    </div>
  <% end %>

</div>
