<h2><%= @show.name %></h2>

<div class="show_info">

  <p>Premiere date: <%= @show.first_air_date %></p>

</div>

<div class="friend_fans">

  <h3>Fans:</h3>

  <ul class="show_fans">
    <% for user in @show.users %>
    <li>
      <%= link_to user.name, user_path(user) %>
    </li>
    <% end %>
  </ul>

</div>
